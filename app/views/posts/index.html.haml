.container-fulid.p-5.m-5
  - @posts.each do |post|
    = link_to post_path(post), {class: "text-decoration-none text-secondary "} do
      .card.mx-auto.mb-4{:style => "width: 40rem;"}
        .card-post-information.row.mx-auto
          %p.col-6= post.author_name
          %p.col-6= post.display_created_at
        .card-body.mb-5
          %h5.card-title= post.title
          %p.card-text= post.content
        %ul.list-group.list-group-flush
          %li.list-group-item An item
          %li.list-group-item A second item
          %li.list-group-item A third item
        .card-body.row
          .card-bady-first.col-6
            %a.card-link{href: "#"} Card link
          .card-bady-second.col-6
            %a.card-link{href: "#"} Another link
  
  = link_to new_post_path do
    %button.btn.fixed-bottom{:type => "button"}
      %i.fas.fa-plus-circle.fa-4x